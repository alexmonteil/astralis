<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center mb-3">New Starport</h1>
    <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3">
        <div class="ajaxLoader position-absolute top-50 start-50 translate-middle text-center">
            <img src="/img/loading.gif" style="width: 300px; height: auto;" alt="loading animation">
        </div>  
        <form action="/starports" method="post" class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="starport[title]" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="starport[location]" id="location" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload images</label>
                <input class="form-control" type="file" id="image" name="image" accept=".jpg,.jpeg,.png" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Starport Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="number" class="form-control" id="price" name="starport[price]" placeholder="0.00" min="0" aria-label="price" aria-describedby="price-label" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="starport[description]" id="description" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-secondary" type="submit">Add Starport</button>
            </div>
        </form>
        <a id="ajax" href="/starports">All Starports</a>
    </div>
</div>
<script src="/js/ajaxLoader.js"></script>

